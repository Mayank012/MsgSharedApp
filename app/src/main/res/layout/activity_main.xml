<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.MainActivity"
        android:padding="10dp">

    <Button android:text="@string/btn_show_toast"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnShowToast"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="109dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="113dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/btn_your_msg"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:id="@+id/etUserMessage"
            android:layout_marginTop="183dp"/>
    <Button
            android:text="@string/btn_send_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/btnSendMessage"
            android:layout_marginBottom="237dp"
            android:layout_centerHorizontal="true"/>
    <Button
            android:text="@string/btn_share_msg"
            android:layout_width="350dp"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:layout_alignParentBottom="true" android:id="@+id/btnShare"
            android:layout_marginBottom="185dp"/>
    <Button
            android:text="@string/btn_hobbies"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" android:id="@+id/btnHobbies"
            android:layout_marginBottom="124dp"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>